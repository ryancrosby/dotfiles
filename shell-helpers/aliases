# Source our local file, for any environment variables that we
# don't want to share
source_if_exists ~/.shell-helpers/aliases

# JSON Parsing shortcut
alias pp="python -m json.tool"

# Colorize output, add file type indicator, and put sizes in human readable format
alias ls='ls -GFh'

# Same as above, but in long listing format
alias ll='ls -GFhl'

# Yarn via npx
alias yarn='npx yarn'

# Print terminal colors
alias list_colors='for code in {000..255}; do print -P -- "$code: %F{$code}Test%f"; done'

# Add macvim as vim
#alias vim=/usr/local/Cellar/macvim/7.3-65/MacVim.app/Contents/MacOS/macvim

