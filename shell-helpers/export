# Source our local file, for any environment variables that we
# don't want to share
[[ -s ~/.shell-helpers/environment-variables ]] && . ~/.shell-helpers/environment-variables

# Add homebrew paths
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# React Native
export REACT_EDITOR=vscode

# Go
export PATH=$PATH:/usr/local/opt/go/libexec/bin

# Custom Command Line Programs
export PATH="${HOME}/dotfiles/bin:${PATH}"

export PATH="/usr/local/opt/postgresql@9.5/bin:$PATH"

# Add local bin of shell scripts
if [[ -d "${HOME}/.shell-helpers/bin" ]]; then
  export PATH="${HOME}/.shell-helpers/bin:${PATH}"
fi

# Make Homebrew Cask installs go to a sensible location
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# Shorten key timeout, this is for switching to vi mode editing a zsh prompt
export KEYTIMEOUT=1

# 256 color
export TERM=xterm-256color

# set editor
export EDITOR=vim

# Brew Python
#export PATH="/usr/local/share/python:${PATH}"
