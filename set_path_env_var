function source_if_exists {
  if [ -s "$1" ]; then
    source "$1"
  else
    echo "Could not source file ${1}. File does not exist"
  fi
}

# Add homebrew paths
export PATH=/usr/local/bin:/usr/local/sbin:$PATH

# Go
export PATH=$PATH:/usr/local/opt/go/libexec/bin

# Custom Command Line Programs
export PATH="${HOME}/dotfiles/bin:${PATH}"

# Add local bin of shell scripts
if [[ -d "${HOME}/.shell-helpers/bin" ]]; then
  export PATH="${HOME}/.shell-helpers/bin:${PATH}"
fi

# Brew Python
#export PATH="/usr/local/share/python:${PATH}"

# Set our local path
source_if_exists "${HOME}/.shell-helpers/set_path_env_var"

source_if_exists "/Applications/Visual Studio Code.app/Contents/Resources/app/bin"

