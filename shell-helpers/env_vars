# Source our local file, for any environment variables that we
# don't want to share
df_source_if_exists ~/.shell-helpers/environment-variables

# React Native
export REACT_EDITOR=vscode

# Make Homebrew Cask installs go to a sensible location
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

export PKG_CONFIG_PATH="/usr/local/opt/libffi/lib/pkgconfig"

# Shorten key timeout, this is for switching to vi mode editing a zsh prompt
export KEYTIMEOUT=1

# 256 color
export TERM=xterm-256color

# set editor
export EDITOR="vim"
